%h1 Login

- form_for(@user, :url => { :action => :login }) do |f|
  = f.error_messages

  %table
    %tbody
      %tr
        %td= f.label :login
        %td= f.text_field :login
      %tr
        %td= f.label :password
        %td= f.password_field :password
    %tfoot
      %tr
        %td{ :colspan => 2 }= f.submit 'Login'
<h1>Login</h1>

<% form_for(@user, :url => { :action => 'login' }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit 'Login' %>
  </p>
<% end %>
